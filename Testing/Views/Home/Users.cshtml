@model Testing.Models.Users
@{
    ViewData["Title"] = "Users";
    IEnumerable<MasterRole> masterRole = ViewData["MasterRole"] as IEnumerable<MasterRole>;
    IEnumerable<UserResponse> users = ViewData["Users"] as IEnumerable<UserResponse>;
}

@using (Html.BeginForm("Users", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label for="exampleInputName">Name</label>
        @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control", @placeholder = "Enter Name" })
    </div>
    <div class="form-group">
        <label for="exampleInputUserName">UserName</label>
        @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control", @placeholder = "Enter UserName" })
    </div>
    <div class="form-group">
        <label for="exampleInputPassword">Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputRole">Role</label>
        @Html.DropDownListFor(m => m.RoleId, new SelectList(masterRole, "Id", "Name"), "Please select role", htmlAttributes: new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}
<div class="mx-auto" style="width: 200px;">
    &nbsp;
</div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">UserName</th>
            <th scope="col">RoleName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in users)
        {
            <tr>
                <th scope="row">@data.Id</th>
                <td>@data.Name</td>
                <td>@data.UserName</td>
                <td>@data.RoleName</td>
            </tr>
        }
    </tbody>
</table>

