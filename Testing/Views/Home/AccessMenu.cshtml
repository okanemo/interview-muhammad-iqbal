@model Testing.Models.AccessMenu
@{
    ViewData["Title"] = "Access Menu";
    IEnumerable<MasterRole> masterRole = ViewData["MasterRole"] as IEnumerable<MasterRole>;
    IEnumerable<MasterMenu> masterMenu = ViewData["MasterMenu"] as IEnumerable<MasterMenu>;
    IEnumerable<Scoped> accessMenu = ViewData["AccessMenu"] as IEnumerable<Scoped>;
}

@using (Html.BeginForm("AccessMenu", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label for="exampleInputRole">Role</label>
        @Html.DropDownListFor(m => m.RoleId, new SelectList(masterRole, "Id", "Name"), "Please select role", htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputMenu">Menu</label>
        @Html.DropDownListFor(m => m.MenuId, new SelectList(masterMenu, "Id", "Name"), "Please select menu", htmlAttributes: new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}
<div class="mx-auto" style="width: 200px;">
    &nbsp;
</div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Role Name</th>
            <th scope="col">Menu Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in accessMenu)
        {
            <tr>
                <td>@data.RoleName</td>
                <td>@data.MenuName</td>
            </tr>
        }
    </tbody>
</table>
